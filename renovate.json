{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:recommended"
    ],
    "flux": {
      "fileMatch": [
        "\\.yaml$"
      ]
    },
    "packageRules": [
      {
        "matchUpdateTypes": [
          "minor",
          "patch"
        ],
        "automerge": true,
        "ignoreTests": true,
        "automergeType": "branch"
      }
    ]
}